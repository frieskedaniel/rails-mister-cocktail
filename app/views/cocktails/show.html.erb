<h2>What's insinde??</h2>
<div>
    <p><%= @cocktail.name %></p>
    <% @cocktail.doses.each do |dose| %>
      <%= dose.description  %>   <br>
      <%= dose.ingredient.name  %>  <br>
      <%= link_to "Delete",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    <% end %>
    
</div>


